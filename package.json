{
  "name": "playground",
  "private": true,
  "workspaces": [
    "site",
    "micro_sites/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build --include-dependencies --no-deps",
    "dev": "turbo run dev",
    "start": "turbo run start",
    "prettier-fix": "prettier --write ."
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "prettier": "^2.5.1",
    "turbo": "^1.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "turbo run lint"
    }
  },
  "packageManager": "npm@8.1.2"
}
